{
  "terraform": {
    "required_providers": {
      "aws": {
        "source": "hashicorp/aws",
        "version": "~> 4.0"
      }
    }
  },
  "provider": {
    "aws": {
      "region": "us-east-1"
    }
  },
  "resource": {
    "aws_vpc": {
      "vpc": {
        "cidr_block": "10.0.0.0/16",
        "enable_dns_hostnames": true,
        "enable_dns_support": true,
        "tags": {
          "Name": "main-vpc"
        },
        "provider": "aws"
      }
    },
    "aws_subnet": {
      "subnet1": {
        "vpc_id": "${aws_vpc.vpc.id}",
        "cidr_block": "10.0.1.0/24",
        "availability_zone": "us-east-1a",
        "map_public_ip_on_launch": true,
        "provider": "aws"
      },
      "subnet2": {
        "vpc_id": "${aws_vpc.vpc.id}",
        "cidr_block": "10.0.2.0/24",
        "availability_zone": "us-east-1b",
        "map_public_ip_on_launch": true,
        "provider": "aws"
      }
    },
    "aws_security_group": {
      "allow_ssh": {
        "name": "allow_ssh",
        "vpc_id": "${aws_vpc.vpc.id}",
        "ingress": [
          {
            "description": "Allow SSH access",
            "from_port": 22,
            "to_port": 22,
            "protocol": "tcp",
            "cidr_blocks": [
              "0.0.0.0/0"
            ],
            "ipv6_cidr_blocks": [],
            "prefix_list_ids": [],
            "security_groups": [],
            "self": false
          }
        ],
        "egress": [
          {
            "description": "Allow all outbound traffic",
            "from_port": 0,
            "to_port": 0,
            "protocol": "-1",
            "cidr_blocks": [
              "0.0.0.0/0"
            ],
            "ipv6_cidr_blocks": [],
            "prefix_list_ids": [],
            "security_groups": [],
            "self": false
          }
        ],
        "provider": "aws"
      }
    },
    "aws_iam_role": {
      "eks_cluster_iam": {
        "name": "eks-cluster",
        "assume_role_policy": "{\"Version\": \"2012-10-17\", \"Statement\": [{\"Effect\": \"Allow\", \"Principal\": {\"Service\": \"eks.amazonaws.com\"}, \"Action\": \"sts:AssumeRole\"}]}",
        "provider": "aws"
      }
    },
    "aws_iam_role_policy_attachment": {
      "eks_cluster_policy_attachment": {
        "role": "${aws_iam_role.eks_cluster_iam.name}",
        "policy_arn": "arn:aws:iam::aws:policy/AmazonEKSClusterPolicy",
        "provider": "aws"
      }
    },
    "aws_eks_cluster": {
      "eks_cluster_main": {
        "name": "main-cluster",
        "role_arn": "${aws_iam_role.eks_cluster_iam.arn}",
        "vpc_config": {
          "subnet_ids": [
            "${aws_subnet.subnet1.id}",
            "${aws_subnet.subnet2.id}"
          ]
        },
        "provider": "aws",
        "depends_on": [
          "aws_iam_role_policy_attachment.eks_cluster_policy_attachment"
        ]
      }
    },
    "aws_instance": {
      "web_server": {
        "instance_type": "t2.micro",
        "ami": "ami-005fc0f236362e99f",
        "subnet_id": "${aws_subnet.subnet1.id}",
        "vpc_security_group_ids": [
          "${aws_security_group.allow_ssh.id}"
        ],
        "tags": {
          "Name": "main_web_server"
        },
        "provider": "aws",
        "depends_on": [
          "aws_vpc.vpc"
        ]
      }
    },
    "aws_internet_gateway": {
      "main": {
        "vpc_id": "vpc-0efdbfd6beddaa46d",
        "tags": {
          "Name": "main",
          "ManagedBy": "terraform"
        }
      }
    },
    "aws_route_table": {
      "main": {
        "vpc_id": "vpc-0efdbfd6beddaa46d",
        "tags": {
          "Name": "main",
          "ManagedBy": "terraform"
        }
      }
    },
    "aws_route": {
      "internet_access": {
        "route_table_id": "${aws_route_table.main.id}",
        "destination_cidr_block": "0.0.0.0/0",
        "gateway_id": "${aws_internet_gateway.main.id}"
      }
    },
    "aws_route_table_association": {
      "main": {
        "subnet_id": "subnet-04559b54f32eedeaa",
        "route_table_id": "${aws_route_table.main.id}"
      }
    }
  },
  "output": {
    "webapp_vpc_id": {
      "value": "${aws_vpc.vpc.id}",
      "description": "ID of vpc in service webapp"
    },
    "webapp_subnet1_id": {
      "value": "${aws_subnet.subnet1.id}",
      "description": "ID of subnet1 in service webapp"
    },
    "webapp_subnet2_id": {
      "value": "${aws_subnet.subnet2.id}",
      "description": "ID of subnet2 in service webapp"
    },
    "webapp_allow_ssh_id": {
      "value": "${aws_security_group.allow_ssh.id}",
      "description": "ID of allow_ssh in service webapp"
    },
    "webapp_eks_cluster_iam_id": {
      "value": "${aws_iam_role.eks_cluster_iam.id}",
      "description": "ID of eks_cluster_iam in service webapp"
    },
    "webapp_eks_cluster_policy_attachment_id": {
      "value": "${aws_iam_role_policy_attachment.eks_cluster_policy_attachment.id}",
      "description": "ID of eks_cluster_policy_attachment in service webapp"
    },
    "webapp_eks_cluster_main_id": {
      "value": "${aws_eks_cluster.eks_cluster_main.id}",
      "description": "ID of eks_cluster_main in service webapp"
    },
    "webapp_web_server_id": {
      "value": "${aws_instance.web_server.id}",
      "description": "ID of web_server in service webapp"
    }
  }
}